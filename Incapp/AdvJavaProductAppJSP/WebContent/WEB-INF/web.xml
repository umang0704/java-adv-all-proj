<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>AdvJavaProductAppJSP</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/ExpPage.jsp</location>
	</error-page>
	<context-param>
        <param-name>dbdriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>dbpath</param-name>
        <param-value>jdbc:mysql://localhost:3306/productdb</param-value>
    </context-param>
    <context-param>
        <param-name>dbid</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbpass</param-name>
        <param-value>Incapp@12</param-value>
    </context-param>
    <context-param>
        <param-name>ssl</param-name>
        <param-value>useSSL=false</param-value>
    </context-param>
    <context-param>
        <param-name>publickey</param-name>
        <param-value>allowPublicKeyRetrieval=true</param-value>
    </context-param>
</web-app>